<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Final_verify"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="50dp"
        android:layout_gravity="center"
        android:background="@drawable/pruff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Submitted"
        android:textSize="35dp"
        android:layout_margin="25dp"
        android:textStyle="italic|bold"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To ensure a great experience for our members we screen every application. You will receive a push notification once your profile is created."
        android:textSize="25dp"
        android:layout_margin="25dp"
        android:textStyle="italic"
        android:textColor="#928585"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Exit"
        android:layout_gravity="center"
        android:background="@drawable/btn_style"/>

</LinearLayout>